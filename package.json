{
  "name": "referenza",
  "version": "0.0.6",
  "description": "Create static HTML project documentation using Markdown",
  "bin": {
    "referenza": "dist/main/ts/main.js"
  },
  "main": "dist/main/ts/main.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "npm run clean && tsc && chmod +x dist/main/ts/main.js && cp -r src/main/resources dist/main/.",
    "test": "mocha -r ts-node/register src/test/**/*.spec.ts",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilsonzlin/referenza.git"
  },
  "keywords": [
    "build",
    "builder",
    "docs",
    "documentation",
    "generate",
    "generator",
    "markdown",
    "md",
    "static"
  ],
  "author": {
    "email": "contact@wilsonl.in",
    "name": "Wilson Lin",
    "url": "https://wilsonl.in/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wilsonzlin/referenza/issues"
  },
  "homepage": "https://github.com/wilsonzlin/referenza#readme",
  "dependencies": {
    "compression": "1.x",
    "express": "4.x",
    "fs-extra": "4.x",
    "fs-jogger": "0.0.1",
    "highlight.js": "9.x",
    "html-entities": "^1.2.1",
    "hyperbuild": "0.0.2",
    "marked": "^0.4.0",
    "mermaid": "^8.0.0-rc.8",
    "puppeteer": "^1.4.0",
    "referenza-extension": "0.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.3",
    "@types/highlight.js": "^9.12.3",
    "@types/html-entities": "^1.2.16",
    "@types/marked": "^0.3.0",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.2",
    "@types/puppeteer": "^1.3.3",
    "@types/shuffle-array": "0.0.28",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "shuffle-array": "^1.0.1",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  }
}
