{
  "name": "referenza",
  "version": "0.0.6",
  "description": "Create static HTML project documentation using Markdown",
  "bin": {
    "referenza": "dist/main.js"
  },
  "main": "dist/main.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "npm run clean && tsc && chmod +x dist/main.js && cp -r src/static dist/static",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilsonzlin/referenza.git"
  },
  "keywords": [
    "build",
    "builder",
    "docs",
    "documentation",
    "generate",
    "generator",
    "markdown",
    "md",
    "static"
  ],
  "author": {
    "email": "npm@wilsonl.in",
    "name": "Wilson Lin",
    "url": "https://wilsonl.in/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wilsonzlin/referenza/issues"
  },
  "homepage": "https://github.com/wilsonzlin/referenza#readme",
  "dependencies": {
    "clean-css": "^4.2.3",
    "extlib": "^0.0.6",
    "html-entities": "^1.3.1",
    "hyperbuild": "^0.0.45",
    "mkdirp": "^1.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rmd-html": "^0.4.1",
    "rmd-parse": "^0.5.1",
    "sacli": "^2.0.0",
    "node-sass": "^4.14.1",
    "terser": "^4.7.0"
  },
  "devDependencies": {
    "@types/clean-css": "^4.2.1",
    "@types/html-entities": "^1.2.16",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^14.0.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/node-sass": "^4.11.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  }
}
