{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2015"],
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
